<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Student</div>
    <form class="ui form" action="/students" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="student[name]" placeholder="Enter your full name">
        </div>
        <div class="field">
            <label>Passport</label>
            <input type="text" name="student[passport]" placeholder="Passport url">
        </div>
        <div class="field">
            <label>Age</label>
            <input type="text" name="student[age]" placeholder="How old are you?">
        </div>
        <div class="field">
            <label>Sex</label>
            <input type="text" name="student[sex]" placeholder="What's your sex?">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

