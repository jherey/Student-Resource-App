<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Students</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% students.forEach(function(student){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= student.passport %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/students/<%= student._id %>"><%= student.name %></a>
                        <div class="meta">
                            <span><%= student.created.toDateString() %></span>        
                        </div>
                        <div class="description">
                            <p><%= student.sex %></p>
                            <p><%= student.age %></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/students/<%= student._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>        
                </div>    
            <% }) %>                  
        </div>
    </div>
</div>

<% include ./partials/footer %>