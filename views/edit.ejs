<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Student Details</div>
    <form class="ui form" action="/students/<%= student._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="student[name]" value="<%= student.name %>">
        </div>
        <div class="field">
            <label>Age</label>
            <input type="text" name="student[age]" value="<%= student.age %>">
        </div>
        <div class="field">
            <label>Passport</label>
            <input type="text" name="student[passport]" value="<%= student.passport %>">
        </div>
        <div class="field">
            <label>Sex</label>
            <input type="text" name="student[sex]" value="<%= student.sex %>">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>